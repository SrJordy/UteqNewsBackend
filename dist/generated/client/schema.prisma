generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:../dev.db"
}

// Modelo para los usuarios de la aplicación
model Usuario {
  id         Int      @id @default(autoincrement())
  nombre     String
  apellido   String
  email      String   @unique
  password   String // Se guardará hasheada
  rol        String? // Ejemplo: 'estudiante', 'admin'
  verificado Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relaciones
  deviceTokens DeviceToken[]
  preferencias PreferenciaUsuarioCarrera[]
  userCodes    UserCode[] // AÑADIDO: Relación con los códigos de verificación
}

// Modelo para almacenar las carreras que vienen de la API externa.
// Sirve para establecer las preferencias de los usuarios.
model Carrera {
  id     Int    @id @default(autoincrement()) // ID interno de nuestra BD
  apiId  String @unique // CAMBIADO: Ahora es String para guardar crNombre
  nombre String

  // Relaciones
  usuariosConPreferencia PreferenciaUsuarioCarrera[]
}

// Tabla intermedia para la relación muchos-a-muchos de las preferencias
model PreferenciaUsuarioCarrera {
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  carrera   Carrera  @relation(fields: [carreraId], references: [id])
  carreraId Int
  createdAt DateTime @default(now())

  @@id([usuarioId, carreraId])
  @@index([carreraId])
}

// Modelo para los tokens de los dispositivos para notificaciones push
model DeviceToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([usuarioId])
}

// AÑADIDO: Modelo para los códigos de verificación de usuario
model UserCode {
  id         Int      @id @default(autoincrement())
  userId     Int
  code       String
  status     String   @default("active") // active, used, expired
  expiryTime DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user Usuario @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([code])
}
